<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root fx:id="root" prefHeight="80.0" prefWidth="200.0" type="AnchorPane" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
        <ImageView fx:id="coverImg" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true"
                   HBox.hgrow="ALWAYS"/>
        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <Label fx:id="titleLbl" maxWidth="1.7976931348623157E308" text="Album title" VBox.vgrow="ALWAYS"
                   wrapText="true">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Label fx:id="artistLbl" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" text="Album artist"
                   VBox.vgrow="ALWAYS" wrapText="true"/>
        </VBox>
    </HBox>
    <cursor>
        <Cursor fx:constant="HAND"/>
    </cursor>
</fx:root>
