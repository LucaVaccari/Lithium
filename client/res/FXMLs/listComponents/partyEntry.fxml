<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<fx:root prefHeight="60.0" prefWidth="220.0" type="AnchorPane" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
        <ImageView fx:id="userProPicImg" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true"
                   HBox.hgrow="ALWAYS"/>
        <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS">
            <Label fx:id="usernameLbl" text="Username"/>
            <Label fx:id="trackLbl" text="Track"/>
        </VBox>
        <ImageView fx:id="albumCoverImg" fitHeight="40.0" fitWidth="40.0" layoutX="15.0" layoutY="20.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <Button fx:id="joinBtn" maxHeight="1.7976931348623157E308" mnemonicParsing="false" text="Join"
                HBox.hgrow="ALWAYS"/>
    </HBox>
</fx:root>
