<?xml version="1.0" encoding="UTF-8"?>

<?import it.unibs.pajc.lithium.gui.controllers.PlaybackController?>
<?import it.unibs.pajc.lithium.gui.controllers.views.ViewNavbar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unibs.pajc.lithium.gui.controllers.views.ArtistViewController">
    <VBox layoutX="5.0" layoutY="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
          AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
          AnchorPane.topAnchor="5.0">
        <ViewNavbar/>
        <HBox alignment="CENTER" prefHeight="560.0" prefWidth="584.0" spacing="20.0">
            <VBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" prefHeight="560.0" prefWidth="418.0">
                <padding>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
                </padding>
                <Label fx:id="artistNameLbl" maxWidth="1.7976931348623157E308" text="Artist name" wrapText="true"
                       VBox.vgrow="ALWAYS">
                    <font>
                        <Font size="48.0"/>
                    </font>
                </Label>
                <Label fx:id="bioLbl" layoutX="202.0" layoutY="309.0" maxWidth="1.7976931348623157E308" text="Bio"
                       wrapText="true" VBox.vgrow="ALWAYS">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="genreLbl" layoutX="186.0" layoutY="322.0" maxWidth="1.7976931348623157E308"
                       text="Genre list" wrapText="true" VBox.vgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <FlowPane alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="29.0" prefWidth="338.0"
                          HBox.hgrow="ALWAYS">
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onPlayNowBtn"
                            prefHeight="20" text="PLAY NOW" HBox.hgrow="ALWAYS"/>
                    <Button layoutX="145.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                            onAction="#onPlayNextBtn" prefHeight="20" text="PLAY NEXT"
                            HBox.hgrow="ALWAYS"/>
                    <Button layoutX="184.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                            onAction="#onAddToQueueBtn" prefHeight="20" text="ADD TO QUEUE"
                            HBox.hgrow="ALWAYS"/>
                    <Button fx:id="followBtn" onAction="#onFollowBtn" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" prefHeight="20" text="FOLLOW" HBox.hgrow="ALWAYS"/>
                </FlowPane>
                <Pane prefHeight="16.0" prefWidth="338.0"/>
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" hmax="0.0"
                            maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0"
                            prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <ListView fx:id="trackContainer" maxHeight="1.7976931348623157E308"
                              maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0"/>
                </ScrollPane>
            </VBox>
            <ImageView fx:id="proPicImg" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true"
                       HBox.hgrow="ALWAYS"/>
        </HBox>
        <PlaybackController fx:id="playbackController"/>
    </VBox>
</AnchorPane>
