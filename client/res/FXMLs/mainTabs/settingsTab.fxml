<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="600.0" prefWidth="900.0" type="AnchorPane" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1">
    <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" AnchorPane.bottomAnchor="15.0"
          AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0">
        <HBox maxHeight="Infinity" maxWidth="Infinity" prefHeight="100.0" prefWidth="200.0" spacing="150.0"
              VBox.vgrow="ALWAYS">
            <Label alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity"
                   text="HTTP host" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS">
                <graphic>
                    <TextField maxHeight="Infinity" maxWidth="Infinity" fx:id="httpHostTxtField"
                               promptText="Host address..."/>
                </graphic>
            </Label>
        </HBox>
        <HBox layoutX="10.0" layoutY="10.0" maxHeight="Infinity" maxWidth="Infinity" prefHeight="100.0"
              prefWidth="200.0" spacing="150.0" VBox.vgrow="ALWAYS">
            <Label alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity"
                   text="HTTP port" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS">
                <graphic>
                    <TextField maxHeight="Infinity" maxWidth="Infinity" fx:id="httpPortTxtField"
                               promptText="Port..."/>
                </graphic>
            </Label>
        </HBox>
        <HBox layoutX="10.0" layoutY="110.0" maxHeight="Infinity" maxWidth="Infinity" prefHeight="100.0"
              prefWidth="200.0" spacing="150.0" VBox.vgrow="ALWAYS">
            <Label alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity"
                   text="LCP host" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS">
                <graphic>
                    <TextField maxHeight="Infinity" maxWidth="Infinity" fx:id="lcpHostTxtField"
                               promptText="Host address..."/>
                </graphic>
            </Label>
        </HBox>
        <HBox maxHeight="Infinity" maxWidth="Infinity" prefHeight="100.0" prefWidth="200.0" spacing="150.0">
            <Label alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity"
                   text="LCP port" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS">
                <graphic>
                    <TextField maxHeight="Infinity" maxWidth="Infinity" fx:id="lcpPortTxtField"
                               promptText="Host address..."/>
                </graphic>
            </Label>
        </HBox>
        <HBox layoutX="10.0" layoutY="210.0" maxHeight="Infinity" maxWidth="Infinity" prefHeight="100.0"
              prefWidth="200.0" spacing="150.0" VBox.vgrow="ALWAYS">
            <Label fx:id="loggedInAsLbl" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" text="Logged in as"
                   textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS">
                <graphic>
                    <Button fx:id="logOutBtn" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false"
                            text="LOG OUT"/>
                </graphic>
            </Label>
        </HBox>
    </VBox>
</fx:root>
