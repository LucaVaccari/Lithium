<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="600.0" prefWidth="900.0" type="AnchorPane" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1">
    <SplitPane fx:id="inPartyView" dividerPositions="0.5100222717149221" prefHeight="160.0" prefWidth="200.0"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <FlowPane fx:id="usersPane" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
        <AnchorPane maxHeight="Infinity" maxWidth="Infinity" minHeight="0.0" minWidth="0.0"
                    prefHeight="160.0">
            <VBox maxHeight="Infinity" maxWidth="Infinity" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                            maxHeight="Infinity" maxWidth="Infinity"
                            VBox.vgrow="ALWAYS">
                    <ListView fx:id="messagesListView" maxHeight="Infinity"
                              maxWidth="Infinity"/>
                </ScrollPane>
                <HBox alignment="CENTER" maxWidth="Infinity">
                    <TextField fx:id="messageTxtField" promptText="Message..." HBox.hgrow="ALWAYS"/>
                    <Button fx:id="sendBtn" mnemonicParsing="false" text="Send"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </SplitPane>
    <FlowPane fx:id="outOfPartyView" prefHeight="200.0" prefWidth="200.0" visible="false" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
</fx:root>
